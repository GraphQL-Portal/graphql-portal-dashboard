{
  "name": "graphql-portal-dashboard-backend",
  "application": {
    "env": "default",
    "port": 3030,
    "useSwaggerUi": true,
    "graphQL": {
      "playground": true,
      "debug": true
    },
    "logLevel": "debug",
    "secret": "",
    "jwtSecret": "jwtSecret",
    "salt": "salt",
    "defaultAdmin": {
      "email": "admin@example.com",
      "password": "Secret123!"
    },
    "metrics": {
      "enabled": true,
      "chunk": 100,
      "delay": 5000
    }
  },
  "db": {
    "redis": {
      "connectionString": "redis://localhost:6379"
    },
    "mongodb": {
      "connectionString": "mongodb://localhost:27017/graphql-portal-dashboard"
    }
  }
}
