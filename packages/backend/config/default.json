{
  "name": "graphql-portal-dashboard-backend",
  "application": {
    "env": "default",
    "host": "localhost",
    "port": 3030,
    "useSwaggerUi": true,
    "graphQL": {
      "playground": true,
      "debug": true
    },
    "serveStatic": false,
    "logLevel": "debug",
    "jwtSecret": "jwtSecret",
    "salt": "salt",
    "defaultAdmin": {
      "email": "admin@example.com",
      "password": "Secret123!"
