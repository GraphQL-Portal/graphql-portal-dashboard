{
  "name": "graphql-portal-dashboard-backend",
  "version": "0.0.1",
  "description": "Backend part of graphql-portal-dashboard",
  "author": "code.store",
  "license": "MIT",
  "scripts": {
    "postinstall": "node-config-ts",
    "prebuild": "rimraf dist",
    "build": "nest build -p tsconfig.json",
    "start": "nest start",
    "start:dev": "node --inspect=0.0xr.0.0 dist/main",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "clear": "rm -rf node_modules"
  },
  "dependencies": {
    "@graphql-portal/types": "0.1.0",
    "@graphql-mesh/types": "0.23.1",
    "@nestjs/common": "7.6.3",
    "@nestjs/core": "7.6.3",
    "@nestjs/graphql": "7.9.1",
    "@nestjs/mongoose": "7.2.0",
    "@nestjs/platform-express": "7.6.3",
    "@nestjs/swagger": "4.7.8",
    "@types/ioredis": "4.17.9",
    "apollo-server-express": "2.19.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "cli-color": "2.0.0",
    "envsub": "4.0.7",
    "express": "4.17.1",
    "graphql": "15.4.0",
    "graphql-tools": "6.2.6",
    "ioredis": "4.19.4",
    "mongoose": "5.11.8",
    "node-config-ts": "3.1.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "class-validator-mongo-object-id": "1.2.0",
    "type-graphql": "1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/schematics": "7.2.5",
    "@nestjs/testing": "7.6.3",
    "@types/cli-color": "2.0.0",
    "@types/express": "4.17.9",
    "@types/jest": "26.0.19",
    "@types/node": "14.14.14",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.10.0",
    "@typescript-eslint/parser": "4.10.0",
    "eslint": "7.15.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "jest": "26.6.3",
    "jest-runner-eslint": "0.10.0",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.12",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "projects": [
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/**/*.ts"
        ],
        "rootDir": "src"
      },
      {
        "displayName": "test",
        "moduleFileExtensions": [
          "js",
          "json",
          "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
          "^.+\\.ts$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
          "/node_modules/",
          "/dist/",
          ".dto.ts$"
        ],
        "testEnvironment": "node"
      }
    ]
  }
}
